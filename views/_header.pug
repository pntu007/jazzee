header.header
  .header__logo
    img(src='/img/logo.jpg' alt='JAZZEE logo')
  nav.nav
    a.nav__el.nav__el--cta(href='#') All Product
    a.nav__el.nav__el--cta(href='#') My Bookings
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el.nav__el--cta(href='/login') Log in
      a.nav__el.nav__el--cta(href='#') Sign up